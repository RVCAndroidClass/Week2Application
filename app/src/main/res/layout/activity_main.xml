<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtName"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="27dp" android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp" app:layout_constraintEnd_toEndOf="@+id/btnSubmit"
            android:hint="Enter Full Name"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubmit"
            app:layout_constraintStart_toStartOf="@+id/txtShow" android:layout_marginTop="9dp"
            android:layout_marginLeft="118dp" android:layout_marginStart="118dp"
            app:layout_constraintTop_toBottomOf="@+id/txtName"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtShow"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSubmit" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>